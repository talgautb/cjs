*
	-webkit-box-sizing: border-box // Safari/Chrome, other WebKit
	-moz-box-sizing: border-box    // Firefox, other Gecko
	box-sizing: border-box        // Opera/IE 8+

html
	height 100%

body
	font-size $font-size
	font-family $font
	height 100%
	color #333

a
	color $maincolor
	text-decoration none
	
	&:hover
		text-decoration underline

// Common style
.hidden
	display none

.clearfix
	clearfix()